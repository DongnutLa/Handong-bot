{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
